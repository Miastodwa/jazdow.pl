// ANIMATIONS

@keyframes rotate
	0%
		transform: rotate(0deg)
	100%
		transform: rotate(360deg)

@keyframes slideInLeft
	0%
		opacity: 0
		visibility: visible
		transform: translateX(16rem)
	40%
		transform: translateX(-1rem)
	100%
		transform: translateX(0)
		opacity: 1
		visibility: visible

@keyframes slideInRight
	0%
		opacity: 0
		visibility: visible
		transform: translateX(-16rem)
	40%
		transform: translateX(1rem)
	100%
		transform: translateX(0)
		opacity: 1
		visibility: visible

@keyframes slideOutLeft
	0%
		display: block
		opacity: 1
		visibility: visible
		transform: translateX(0)
	40%
		transform: translateX(1rem)
	100%
		transform: translateX(-16rem)
		opacity: 0
		visibility: hidden

@keyframes slideOutRight
	0%
		opacity: 1
		visibility: visible
		transform: translateX(0)
	40%
		transform: translateX(-1rem)
	100%
		transform: translateX(16rem)
		opacity: 0
		visibility: hidden


@keyframes slideInUp
	0%
		opacity: 0
		visibility: visible
		transform: translateY(10rem)
	40%
		transform: translateY(-1rem)
	100%
		transform: translateY(0)
		opacity: 1
		visibility: visible

@keyframes slideOutDown
	0%
		transform: translateY(0)
		opacity: 1
		visibility: visible
	100%
		opacity: 0
		visibility: visible
		transform: translateY(10rem)

@keyframes labelIn
	0%
		opacity: 0
		transform: translateY(5rem)
	100%
		opacity: 1
		transform: translateY(0)

@keyframes labelOut
	0%
		visibility: visible
		opacity: 1
		transform: translateY(0)
	100%
		opacity: 0
		transform: translateY(5rem)

@keyframes expander-open
	0%
		visibility hidden
		max-height 0
	100%
		visibility visible
		max-height 50rem

@keyframes expander-close
	0%
		visibility visible
		max-height 50rem
	100%
		visibility hidden
		max-height 0
